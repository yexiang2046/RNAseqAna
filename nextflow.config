profile {
	standard {
		process {
			executor = 'local'
			cpus = 8
			memory = '64G'
			container = 'xiang2019/rnaseq_cmd:v1.0.0'
			}
		params {
    			gtf = null
    			bam_dir = 'bamfiles'
    			rmsk = null
    			outdir = 'results'
    			piranha_params = '-s -b 20 -d ZeroTruncatedNegativeBinomial -p 0.01 -u 100'
		}
	}
	awsbatch {
		accessKey = ''
		secretKey = ''
		region = 'us-east-1'
		process {
			executor = 'awsbatch'
			cpus = 8
			memory = '64G'
		}
		fusion {
			enabled = true
		}
	}
}

			
// Default parameters
params {
    gtf = null
    bam_dir = 'bamfiles'
    rmsk = null
    outdir = 'results'
    piranha_params = '-s -b 20 -d ZeroTruncatedNegativeBinomial -p 0.01 -u 100'

    // Functional analysis parameters
    run_functional_analysis = true
    species = 'human'  // Options: 'human', 'mouse'
}

// Process configuration
process {
    // Default container
    container = 'xiang2019/rnaseq_cmd:v1.0.0'

    // Resource configurations
    cpus = 8
    memory = '32 GB'
    time = '12h'

    withName: STAR_INDEX {
        cpus = 16
        memory = '64 GB'
        time = '12h'
        container = 'xiang2019/rnaseq_cmd:v1.0.0'
    }

    withName: ALIGN {
        cpus = 16
        memory = '64 GB'
        time = '12h'
        container = 'xiang2019/rnaseq_cmd:v1.0.0'
    }
    
    
    withName: EXTRACT_FEATURES {
        cpus = 2
        memory = '8 GB'
        time = '2h'
        container = 'xiang2019/gtftools:v1.0.0'
    }
    
    withName: PIRANHA_PEAK_CALLING {
        cpus = 4
        memory = '16 GB'
        time = '4h'
        container = 'nfcore/clipseq:1.0.0'
        
        // Add retry strategy for memory-intensive operations
        errorStrategy = 'retry'
        maxRetries = 3
        memory = { 16.GB * task.attempt }
    }
    
    withName: BAM_PREPROCESSING {
        cpus = 4
        memory = '16 GB'
        time = '4h'
        container = 'xiang2019/samtools:v1.9'
    }
    
    withName: ANNOTATE_FEATURES {
        cpus = 2
        memory = '8 GB'
        time = '2h'
    }
    
    withName: ANNOTATE_REPEATS {
        container = 'xiang2019/rnaseq_renv:v1.0.0'
        cpus = 2
        memory = '8 GB'
        time = '2h'
    }
    
    withName: GENERATE_REPORT {
        cpus = 1
        memory = '4 GB'
        time = '1h'
        container = 'xiang2019/python_report:v1.0.0'
    }

    withName: DE_ANALYSIS {
        cpus = 4
        memory = '16 GB'
        time = '4h'
        container = 'xiang2019/rnaseq_renv:v1.0.1'
    }

    withName: FUNCTIONAL_ANALYSIS {
        cpus = 4
        memory = '16 GB'
        time = '4h'
        container = 'xiang2019/rnaseq_renv:v1.0.0'
    }
}

// Docker/Singularity configuration
docker {
    enabled = true
    runOptions = '--rm'
}

singularity {
    enabled = false
    autoMounts = true
}

// Reporting configuration
report {
    enabled = true
    file = "${params.outdir}/pipeline_report.html"
}

timeline {
    enabled = true
    file = "${params.outdir}/timeline.html"
}


// Manifest
manifest {
    name = 'RNA-sequence Analysis Pipeline'
    author = 'Xiang Ye'
    description = 'Nextflow pipeline for RNA-seq'
    version = '1.0.0'
    nextflowVersion = '>=21.04.0'
}
