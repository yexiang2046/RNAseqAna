// Default parameters
params {
    gtf = null
    bam_dir = 'bamfiles'
    rmsk = null
    outdir = 'results'
    piranha_params = '-s -b 20 -d ZeroTruncatedNegativeBinomial -p 0.01 -u 100'
    max_cpus = 16
    max_memory = '32 GB'
    max_time = '24.h'
    container_registry = 'docker.io'
    container_username = 'xiang2019'
    container_tag = 'v1.0.0'
}

// Process configuration
process {
    // Default container
    container = 'xiang2019/rnaseq_cmd:v1.0.0'

    // Resource configurations
    cpus = 1
    memory = '4 GB'
    time = '1h'
    
    withName: EXTRACT_FEATURES {
        cpus = 2
        memory = '8 GB'
        time = '2h'
    }
    
    withName: PIRANHA_PEAK_CALLING {
        cpus = 4
        memory = '16 GB'
        time = '4h'
        container = 'nfcore/clipseq:1.0.0'
        
        // Add retry strategy for memory-intensive operations
        errorStrategy = 'retry'
        maxRetries = 3
        memory = { 16.GB * task.attempt }
    }
    
    withName: BAM_PREPROCESSING {
        cpus = 4
        memory = '16 GB'
        time = '4h'
        container = 'xiang2019/samtools:v1.9'
    }
    
    withName: ANNOTATE_FEATURES {
        cpus = 2
        memory = '8 GB'
        time = '2h'
    }
    
    withName: ANNOTATE_REPEATS {
        cpus = 2
        memory = '8 GB'
        time = '2h'
    }
    
    withName: GENERATE_REPORT {
        cpus = 1
        memory = '4 GB'
        time = '1h'
        container = 'quay.io/biocontainers/pandas:1.5.2'
    }
}

// Execution profiles
profiles {
    spliceq {
        docker.enabled = true
        process {
            container = 'xiang2019/spliceq:v1.0.0'
            cpus = 4
            memory = '8 GB'
            
            withLabel: big_mem {
                cpus = 8
                memory = '16 GB'
            }
        }
        
        docker {
            runOptions = '-u $(id -u):$(id -g)'
            temp = 'auto'
            enabled = true
            fixOwnership = true
        }
    }
    
    // Default profile settings
    standard {
        process {
            cpus = 4
            memory = '8 GB'
            
            withLabel: big_mem {
                cpus = 8
                memory = '16 GB'
            }
        }
    }
    
    slurm {
        process.executor = 'slurm'
        process.queue = 'normal'
        process.clusterOptions = '--account=your_account'
    }
    
    sge {
        process.executor = 'sge'
        process.queue = 'all.q'
    }
}

// Docker/Singularity configuration
docker {
    enabled = true
    runOptions = '--rm'
}

singularity {
    enabled = false
    autoMounts = true
}

// Reporting configuration
report {
    enabled = true
    file = "${params.outdir}/pipeline_report.html"
}

timeline {
    enabled = true
    file = "${params.outdir}/timeline.html"
}

trace {
    enabled = true
    file = "${params.outdir}/trace.txt"
}

// Manifest
manifest {
    name = 'Piranha Peak Analysis Pipeline'
    author = 'Xiang Ye'
    description = 'Nextflow pipeline for Piranha peak calling and annotation'
    version = '1.0.0'
    nextflowVersion = '>=21.04.0'
    homePage = 'https://github.com/xiang2019/spliceq'
    mainScript = 'spliceq.nf'
}
