// Default parameters
params {
    bam_dir = 'aligned'
    gtf = null
    outdir = 'results'
    max_cpus = 16
    max_memory = '32 GB'
    max_time = '24.h'
}

// Process configuration
process {
    // Default settings
    cpus = 1
    memory = '4 GB'
    time = '1h'
}

// Execution profiles
profiles {
    spliceq {
        docker.enabled = true
        process {
            container = 'xiang2019/spliceq:v1.0.1'
            
            // Default resources
            cpus = 4
            memory = '8 GB'
            time = '4h'
            
            withLabel: big_mem {
                cpus = 8
                memory = '16 GB'
                time = '8h'
            }
            
            // Error handling
            errorStrategy = { task.exitStatus in [143,137,104,134,139] ? 'retry' : 'finish' }
            maxRetries = 3
            maxErrors = '-1'
        }
        
        docker {
            enabled = true
            runOptions = '-u $(id -u):$(id -g)'
            temp = 'auto'
            fixOwnership = true
        }
    }
    
    // Default profile settings
    standard {
        process {
            cpus = 4
            memory = '8 GB'
            
            withLabel: big_mem {
                cpus = 8
                memory = '16 GB'
            }
        }
    }
    
    slurm {
        process.executor = 'slurm'
        process.queue = 'normal'
        process.clusterOptions = '--account=your_account'
    }
}

// Docker configuration
docker {
    enabled = true
    runOptions = '--rm'
    sudo = false
}

// Reporting configuration
report {
    enabled = true
    file = "${params.outdir}/pipeline_report.html"
}

timeline {
    enabled = true
    file = "${params.outdir}/timeline.html"
}

trace {
    enabled = true
    file = "${params.outdir}/trace.txt"
}

// Manifest
manifest {
    name = 'SPLICE-Q Pipeline'
    author = 'Xiang Ye'
    description = 'Nextflow pipeline for splice site quantification'
    version = '1.0.0'
    nextflowVersion = '>=21.04.0'
    homePage = 'https://github.com/xiang2019/spliceq'
    mainScript = 'spliceq.nf'
}
